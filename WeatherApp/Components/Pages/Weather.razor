@page "/weather"
@attribute [StreamRendering]
@rendermode InteractiveServer

@inject IJSRuntime JS
@inject HttpClient Http

@using System.Globalization
@using WeatherApp.Models

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

<p>Weather forecast based on your current location.</p>

@if (error != null)
{
    <p class="text-danger">@error</p>
}
else if (forecasts == null)
{
    <p><em>Getting your location and loading weather data...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. Min (°C)</th>
                <th>Temp. Max (°C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date</td>
                    <td>@forecast.TempMin</td>
                    <td>@forecast.TempMax</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WeatherForecast>? forecasts;
    private string? error;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
            return;

        try
        {
            var location = await JS.InvokeAsync<UserLocation>("getUserLocation");
            await LoadWeather(location.Latitude, location.Longitude);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            error = $"Unable to get location: {ex.Message}";
            StateHasChanged();
        }
    }

    private async Task LoadWeather(double latitude, double longitude)
    {
        var lat = latitude.ToString(CultureInfo.InvariantCulture);
        var lon = longitude.ToString(CultureInfo.InvariantCulture);

        var url =
            $"https://api.open-meteo.com/v1/forecast" +
            $"?latitude={lat}" +
            $"&longitude={lon}" +
            $"&daily=temperature_2m_max,temperature_2m_min" +
            $"&timezone=auto";

        var response = await Http.GetFromJsonAsync<OpenMeteoResponse>(url);

        forecasts = response?.Daily.Time
            .Select((date, index) => new WeatherForecast
            {
                Date = date,
                TempMin = response.Daily.Temperature_2m_Min[index],
                TempMax = response.Daily.Temperature_2m_Max[index]
            })
            .ToList();
    }

    private class UserLocation
    {
        public double Latitude { get; set; }
        public double Longitude { get; set; }
    }

    private class WeatherForecast
    {
        public string Date { get; set; } = string.Empty;
        public double TempMin { get; set; }
        public double TempMax { get; set; }
    }
}
